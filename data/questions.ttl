@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix fc: <questions/ontology.ttl#> .
@prefix q: <questions/questions.ttl#> .
@prefix lit: <dataset/ontology.ttl#> .

fc:QuestionFormat a owl:Class .

fc:hasFormat a owl:DatatypeProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range xsd:string .

fc:hasContext a owl:ObjectProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range lit:Period .

fc:hasAnswer a owl:ObjectProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range lit:Period .

fc:shouldSuggest a owl:DatatypeProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range xsd:int .

