@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix fc: <questions/ontology.ttl#> .
@prefix q: <questions/questions.ttl#> .
@prefix lit: <dataset/ontology.ttl#> .

fc:QuestionFormat a owl:Class .

fc:QuizContext a owl:Class .

# ----------------------------------

fc:hasPromptFormat a owl:DatatypeProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range xsd:string .

fc:hasPrompt a owl:ObjectProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range lit:Period .

fc:hasAnswer a owl:ObjectProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range lit:Period .

fc:shouldSuggest a owl:DatatypeProperty ;
  rdfs:domain fc:QuestionFormat ;
  rdfs:range xsd:int .

# To Do
fc:hasRelation a owl:ObjectProperty .
  # rdfs:domain fc:QuestionFormat ;
  # rdfs:range xsd:int .


fc:hasPrefix a owl:DatatypeProperty ;
  rdfs:domain fc:QuizContext ;
  rdfs:range xsd:string .

# -------------------------------------

q:QuizContext a fc:QuizContext ;
  fc:hasPrefix "owl: <http://www.w3.org/2002/07/owl#>" ,
              "rdfs: <http://www.w3.org/2000/01/rdf-schema#>" ,
              "rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>" ,
              "xsd: <http://www.w3.org/2001/XMLSchema#>" ,

              "fc: <file:///questions/ontology.ttl#>" ,
              "q: <file:///questions/questions.ttl#>" ,
              "lit: <file:///dataset/ontology.ttl#>" ,
              "ml: <file:///dataset/data.ttl#>" .


# Which work got written in (a ml:Period)? Suggest 4.
q:Format1 a fc:QuestionFormat ;
  rdf:label "Welk werk werd geschreven in periode X?"@nl ;
  fc:hasPromptFormat ("Welk werk werd geschreven in de " "?") ;
  fc:hasPrompt """SELECT ?prompt WHERE { ?prompt a lit:Period .}""" ;
  fc:hasOptions """SELECT ?answer WHERE {
    ?book lit:title ?answer .
    ?book a lit:Book .
  }""" ;
  fc:hasAnswer """SELECT ?answer WHERE {
    ?book lit:title ?answer .
    ?book lit:writtenBy ?author .
    ?author lit:hasPeriod ?prompt .
  }""" ;
  fc:shouldSuggest 4.