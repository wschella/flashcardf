q:Format2 a fc:QuestionFormat ;
  rdf:label "Wat is het code woord voor term X"@nl ;
  fc:hasPromptFormat ("Wat is het code woord voor '" "'?") ;
  fc:shouldSuggest 4 ;

  fc:hasPrompt """SELECT ?prompt WHERE {
    ?qcode a radio:QCode ;
      radio:hasMeaning ?prompt .
  }
  """ ;

  fc:hasOptions """ SELECT ?answer WHERE {
    ?answer a radio:QCode ;
      radio:hasMeaning ?meaning .
  }
  """ ;

  fc:hasAnswer """ SELECT ?answer WHERE {
    ?answer a radio:QCode ;
      radio:hasMeaning ?prompt .
  }
  """ .

q:Format3 a fc:QuestionFormat ;
  rdf:label "Wat is de betekenis van QCode X"@nl ;
  fc:hasPromptFormat ("Wat is de betekenis van " "?") ;
  fc:shouldSuggest 4 ;

  fc:hasPrompt """SELECT ?prompt WHERE {
    ?prompt a radio:QCode .
  }
  """ ;

  fc:hasOptions """ SELECT ?answer WHERE {
    ?code a radio:QCode ;
      radio:hasMeaning ?answer .
  }
  """ ;

  fc:hasAnswer """ SELECT ?answer WHERE {
    ?prompt radio:hasMeaning ?answer .
  }
  """ .
